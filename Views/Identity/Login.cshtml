@model LoginViewModel

<br />
<h2>Giriş Yap</h2>
<br />
<form asp-action="Login" asp-controller="Identity" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div>
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" placeholder="Email Giriniz.." />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <br />
    <div>
        <label asp-for="Password" class="form-label">Şifre</label>
        <input asp-for="Password" class="form-control" placeholder="Şifre Giriniz.." />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <br />
    <div>
        <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label">Beni Hatırla</label>
        <span asp-validation-for="RememberMe" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-success">Giriş Yap</button>
    <a class="btn btn-info" asp-action="Register" asp-controller="Identity">Kayıt Ol</a>
</form>


